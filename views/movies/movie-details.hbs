<a href="/movies">Go back</a>

<section id="movie-details">
  <img src="{{this.image}}" alt="{{this.title}}" />

  <h2>{{this.title}}</h2>
  <h3>{{this.director}}</h3>

  <h4>Stars</h4>
  <ul>
    {{#each stars}}
      <li>{{this}}</li>
    {{/each}}
  </ul>

  <p>{{this.description}}</p>

  <ul>
    {{#each showtimes}}
      <li>{{this}}</li>
    {{/each}}
  </ul>

  <button>
    <a href="/movies/{{this._id}}/edit">Edit</a>
  </button>

  <form action="/movies/{{this._id}}/delete" method="POST">
    <button>
      Delete movie
    </button>
  </form>

</section>