<h2>Ironhack Cinema</h2>

<section id="movies-list">
  <div class="container">
    <div class="row">

      {{#each movies}}
        <div class="col-3">
          <img src="{{this.image}}" alt="{{this.title}}" />
          <h2>{{this.title}}</h2>
          <a href="/movies/{{this._id}}">See details</a>
          |
          <a href="/movies/{{this._id}}/edit">Edit</a>
        </div>
      {{/each}}

    </div>
  </div>
</section>