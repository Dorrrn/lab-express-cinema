<section id="movie-details">
  <img src="{{this.image}}" alt="{{this.title}}" />

  <h2>{{this.title}}</h2>
  <h3>{{this.director}}</h3>

  <h4>Stars</h4>
  <ul>
    {{#each stars}}
      <li>{{this}}</li>
    {{/each}}
  </ul>

  <p>{{this.description}}</p>

  <ul>
    {{#each showtimes}}
      <li>{{this}}</li>
    {{/each}}
  </ul>

</section>